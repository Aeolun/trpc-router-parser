{
  "compilerOptions": {
    "module": "nodenext",
    "outDir": "lib/esm/",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "declaration": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["src/**/*.ts"]
}
