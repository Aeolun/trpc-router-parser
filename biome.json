{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"include": ["./src/**/*"]
	},

	"linter": {
		"rules": {
			"correctness": {
				"useImportExtensions": {
					"level": "error",
					"options": {
						"suggestedExtensions": {
							"ts": {
								"module": "js",
								"component": "jsx"
							}
						}
					}
				}
			}
		}
	}
}
